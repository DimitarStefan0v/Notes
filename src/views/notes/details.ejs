<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/create-update-details.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <div class="details-wrapper">
                    <div class="form-control">
                        <label for="title">Title</label>
                        <input type="text" id="title" value="<%= note.title %>" readonly />
                    </div>
                    <div class="form-control">
                        <label for="description">Description</label>
                        <textarea id="description" rows="10" readonly><%= note.description %></textarea>
                    </div>
                    <a class="update-note-btn" href="/notes/<%= note._id %>/update">Update</a>
                    <a class="delete-note-btn" href="/notes/<%= note._id %>/delete">Delete</a>
                </div>
            </main>
    </body>

    </html>